html
  font-family: 'Roboto', sans-serif;
  color: #1a1a1a
  font-size: 16px
  font-weight: 300
  line-height: 1.5
  background: #f9f9f9
  @media media-lg
    background: #ffffff

@media print {
  @page {
    margin: 1cm;
  }
}

html, body
  overflow-x: hidden

.c
  margin-left: auto
  margin-right: auto
  max-width: $container-lg
  width: 100%
  @media media-lg
    max-width: $container-md
  @media media-md
    max-width: $container-sm
  @media media-sm
    max-width: 100%

.lazy
  visibility: hidden
  opacity: 0

  &.lazy--visible
    visibility: visible
    opacity: 1

img[data-src],
img[data-srcset]
  //display: block;
  min-height: 1px;

.hidden
  display: none

#sprites
  position: absolute
  width: 0
  height: 0
  top: 0
  left: 0

.center
  text-align: center;

.small
  font-size: .85rem
  opacity: .5
