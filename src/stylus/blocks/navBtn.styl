.navBtn
  display: block;
  width: 62px
  height: 62px
  border-radius: 3px
  background: #ea7722
  margin: 0 3px
  position: relative;
  border: 1px solid #ea7722
  anim()

  svg
    position: absolute;
    fill: #fff
    width: 18px
    height: 32px
    top: 50%
    left: 50%
    transform translate(-50%, -50%)
    anim()


  &:hover
    background: #ffffff

    svg
      fill #3d3d3d

  &:active
    box-shadow inset 0 10px 18px 0 rgba(#383838, .23)
    background: #ea7722

    svg
      fill: #fff

  &--next
    svg
      transform translate(-50%, -50%) rotate(180deg)
