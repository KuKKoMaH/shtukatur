.btn
  display: inline-block
  position: relative
  font-weight: 500
  font-size: 16px
  line-height: 1.25
  color: #ffffff
  background: #ea7722
  border-radius: 5px
  padding: 15px 20px
  min-width 172px
  text-align: center;
  border: 1px solid #ea7722
  cursor: pointer;
  anim()

  &:focus
    outline 0

  &__container:hover .btn, &:hover
    background: #ffffff
    color: #3d3d3d

  &__container:active .btn, &:active, &--active
    background: #ea7722
    color: #ffffff
    box-shadow inset 0 10px 18px 0 rgba(#383838, .23)

  &__container
    cursor: pointer;
