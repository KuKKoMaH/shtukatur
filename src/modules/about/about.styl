.about
  padding: 48px 0 90px
  position: relative;
  background: #f9f9f9
  min-height 500px
  @media media-lg
    padding: 21px 0 34px
    min-height auto
  @media media-md
    padding: 16px 0 13px

  &__content
    max-width 875px
    position: relative;
    z-index: 1
    @media media-lg
      text-align: center;
    @media media-md
      padding: 0 20px


  &__image
    position: absolute;
    left: 50%
    margin-left: -298px
    bottom: 16px
    pointer-events none
    anim(.3s)
    @media media-lg
      display: none;

  h2
    margin-bottom: 24px
    @media media-lg
      margin-bottom: 45px
    @media media-md
      margin-bottom: 21px

  p
    line-height: 1.875
    margin-bottom: 30px
