.blogs
  &__items
    margin-bottom: 65px

  &__item
    background: #ffffff
    border-radius: 5px
    margin-bottom: 54px
    display: flex;
    padding: 20px 30px 17px 22px
    position: relative;
    @media media-lg
      flex-direction column
      padding: 24px 21px 53px 22px
    @media media-md
      padding: 13px 13px 19px
      margin-bottom: 46px

  &__img
    display: block;
    overflow: hidden;
    border-radius: 5px
    width: 296px
    height: 345px
    flex-shrink 0
    margin-right: 44px
    background-size: cover;
    background-position: 50% 50%
    @media media-lg
      width: 100%
      height: 291px
      margin-right: 0
      margin-bottom: 16px
    @media media-md
      height: 246px

  &__content
    padding-top: 8px
    @media media-lg
      padding-left: 3px

  &__title
    display: block;
    font-size: 24px
    margin-bottom: 13px

  &__text
    font-size: 16px
    line-height: 1.875
    padding-left: 3px

  &__button
    position: absolute;
    right: 34px;
    bottom: -27px;
    z-index: 1
    @media media-md
      right: 50%
      transform: translateX(50%)

  &__more
    position: relative;
    z-index: 1
    @media media-lg
      .btnArrow
        margin: 0 auto
