.related
  margin-top: 33px
  @media media-lg
    margin-top: 20px

  h3
    font-size: 30px
    margin-bottom: 16px

  &__items
    @media media-lg
      display: flex;

  &__item
    margin-bottom: 24px
    flex-shrink 0
    @media media-lg
      margin-bottom: 0

    &:last-child
      margin-bottom: 0

  &__card
    position: relative;
    display: flex;
    flex-direction column
    justify-content flex-end
    height: 259px
    background-position: 50% 50%
    background-size: cover
    padding: 0 32px 32px 32px
    overflow: hidden;
    border-radius: 5px

    &:before
      content: ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: linear-gradient(to bottom, rgba(#000, 0), rgba(#000, .45))

  &__title
    color: #ffffff
    font-size: 24px
    line-height: 1.25
    margin-bottom: 12px
    position: relative;
    z-index: 1

  &__content
    color: #ffffff
    font-size: 14px
    line-height: 1.7
    overflow: hidden;
    max-height 69px
    position: relative;
    z-index: 1

    p
      margin: 0

  &__nav
    display: none;
    @media media-lg
      display: flex;
      justify-content center
      margin-top: 36px
