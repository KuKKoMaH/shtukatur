.team
  background: #f9f9f9
  padding: 56px 0 50px
  @media media-lg
    padding: 77px 0 10px
  @media media-md
    padding: 49px 0 40px

  &__items
    display: flex;
    flex-wrap wrap
    justify-content center
    margin: 0 -14px
    @media media-md
      flex-wrap nowrap
      justify-content flex-start
      margin: 0

  &__item
    width: 407px
    margin: 0 14px 38px
    flex-shrink 0
    @media media-lg
      width: 338px
      margin-bottom: 46px
    @media media-md
      margin: 0

  &__card
    height: 100%
    position: relative;
    margin: 0 auto
    background: #ffffff
    border-radius: 3px
    padding: 7px 7px 30px
    text-align: center;
    font-family: 'DIN Pro Cond', sans-serif;
    @media media-lg
      padding: 0 8px 28px
    @media media-md
      width: 268px
      padding: 0 5px 22px

    &:before
      content: ''
      position: absolute;
      left: 10px
      right: 10px
      bottom: -8px
      height: 16px
      background: #ffffff
      border-radius: 3px

  &__img
    display: block;
    max-width 100%
    height: auto;
    @media media-lg
      transform translateY(-5px)

  &__top
    position: absolute;
    top: 24px
    right: 25 px
    border-radius: 5px
    background: linear-gradient(to bottom, #f7cb3c, #ee8a27);
    font-size: 12px
    color: #ffffff
    width: 63px
    height: 27px
    display: flex;
    align-items center
    justify-content center
    @media media-lg
      top: 1px
      right: 14px
    @media media-md
      top: 1px
      right: 10px
      width: 51px
      height: 21px
      font-size: 9px

    svg
      width: 14px
      height: 13px
      margin-left: 10px
      fill: #fff
      @media media-md
        width: 11px
        height: 10px
        margin-left: 6px

  &__name
    font-size: 24px
    margin-top: 23px
    @media media-lg
      margin-top: 14px
    @media media-md
      font-size: 19px
      margin-top: 12px

  &__position
    margin-top: 1px
    font-size: 18px
    @media media-md
      font-size: 14px

  &__nav
    display: none;
    @media media-md
      display: flex;
      justify-content center
      margin-top: 42px
