.blogContainer
  padding: 50px 0 65px
  background: #f9f9f9
  @media media-lg
    padding: 52px 0 55px
  @media media-md
    padding: 40px 0 49px

  &__container
    position: relative;
    display: flex;
    @media media-lg
      flex-direction column
      width: 708px
      margin: 0 auto
      padding-top: 116px
    @media media-md
      width: 100%
      padding: 111px 30px 0

  &__content
    flex: 1

  &__sidebar
    width: 406px;
    margin-left: 30px;
    flex-shrink 0
    @media media-lg
      width: 100%
      margin-left: 0

  //margin-bottom: 39px
  //@media media-md
  //  margin-bottom: 34px

  &__tags
    @media media-lg
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 77px
      overflow: hidden;
      anim(.2s)
      &:before
        display: none;

      &.card:after
        left: 5px
        right: 5px
        bottom: 5px
        top: 5px
        border-radius: 0

      & .card__content
        background: #fff
        padding: 5px

    svg
      display: none;
      @media media-lg
        position: absolute;
        display: block;
        transform rotate(-90deg)
        fill #ea7722
        width: 15px
        height: 26px
        right: 43px;
        top: 26px;
        z-index: 2

  &__tag
    display: flex;
    align-items center
    font-size: 16px
    line-height: 1.2

    padding: 0 20px 0 55px
    height: 70px
    border-bottom: 1px solid #e0e0e0
    @media media-lg
      height: 67px
    @media media-lg
      font-size: 14px

    &:hover
      text-decoration: underline;

    &--header
      position: relative;
      font-size: 24px
      &:hover
        text-decoration: none;

      &:before
        content: ''
        position: absolute;
        background: #ffaf6a
        left: -10px
        top: -10px
        right: -10px
        bottom: 0
        border-radius: 5px 5px 0 0;
        opacity: .1
        pointer-events none
        @media media-lg
          display: none;

    &--active
      @media media-lg
        position: absolute;
        top: 5px
        left: 5px
        right: 5px
        z-index: 1
        background: #ffffff

