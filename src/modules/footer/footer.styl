.footer
  &__top
    padding: 19px 0 64px
    @media media-lg
      padding: 35px 0 51px
    @media media-md
      padding: 26px 0 33px

    .c
      position: relative;
      display: flex;
      justify-content: start;
      align-items flex-start
      @media media-lg
        padding: 0 28px
        flex-wrap wrap
      @media media-md
        flex-direction column
        align-items center
        text-align: center;

  .h6
    position: relative;
    font-size: 24px
    margin-bottom: 14px

  .footer__header
    margin-bottom: 18px;
    font-size: 16px;

    &:after
      content ''
      position: absolute;
      top: 100%
      margin-top: 4px
      left: -2px
      background: url(../../images/sprite-footer-decor.png)
      @media media-md
        left: 50%
        transform translateX(-50%)

  &__col {
    margin-right: 40px;
  }

  &__menu
    ul, li
      padding: 0
      margin: 0

    li
      margin-bottom: 15px

      &:before
        display: none;

    a
      display: block;
      font-size: 14px

  &__info
    //position: absolute;
    //bottom: 0
    //right: 0
    //display: flex;
    margin: 0 auto;
    @media media-lg
      position: static;
      width: 100%
    @media media-md
      flex-direction column
      justify-content center
      text-align: center;
      margin-top: 0

  &__infoItem
    font-size: 14px
    margin-right: 65px
    @media media-md
      margin-right: 0

  &__created
    display: block;
    font-size: 24px
    font-family: 'DIN Pro Cond', sans-serif;
    line-height: 1
    margin-top: 16px
    @media media-lg
      display: none;

    &:after
      content: ''
      display: inline-block;
      vertical-align: middle;
      background: url(../../images/sprite-gm.png)
      margin-left: 8px

  &__bottom
    background: #363636
    color: #ffffff
    font-size: 14px
    padding: 7px 0 9px
    @media media-lg
      padding: 36px 0 32px;

    .c
      display: flex;
      justify-content space-between
      align-items center
      @media media-lg
        padding: 0 28px
      @media media-md
        flex-direction column
        justify-content center
        text-align: center;

    a
      text-decoration: underline;
      &:hover
        text-decoration: none;

  &__logo
    flex-shrink 0
    @media media-lg
      display: none;

  &__copyrights
    display contents
    @media media-lg
      width: 400px
      display: block;


  &__copyright
    flex-shrink 0
    margin-left: 20px
    @media media-lg
      margin: 0 0 20px
      &:last-child
        margin: 0
        @media media-md
          margin: 0 0 20px

  &__rights
    max-width 530px

