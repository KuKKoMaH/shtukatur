.equipment
  background: #f9f9f9
  padding: 49px 0 58px
  text-align: center;
  @media media-lg
    padding: 40px 0 25px
  @media media-md
    padding: 25px 0 48px

  .c
    position: relative;
    z-index: 1

  h2
    font-size: 30px
    margin-bottom: 24px
    @media media-lg
      width: 500px
      margin: 0 auto 30px
      line-height: 1.2
    @media media-md
      width: auto;
      font-size: 24px
      line-height: 1.25
      margin-bottom: 16px

  p
    max-width 1250px
    margin: 0 auto 20px
    line-height: 1.85
    @media media-md
      padding: 0 25px
      margin-bottom: 10px

  h3
    position: relative;
    font-size: 24px
    color: #ffffff
    width: 640px
    margin: 62px auto 87px
    @media media-lg
      margin-top: 69px
    @media media-md
      width: auto;
      font-size: 18px
      line-height: 1.35
      color: #292929
      margin-top: 15px
      margin-bottom: 38px
      &:before
        display: none;

    &:before
      content: ''
      position: absolute;
      top: -33px;
      left: -19px;
      background: url(../../images/sprite-equipment-decor.png)
      z-index: -1

  &__items
    display: flex;
    flex-wrap wrap
    margin: 0 -12px;
    justify-content center
    @media media-md
      margin: 0
      justify-content flex-start
      flex-wrap nowrap

  &__item
    margin: 0 12px
    @media media-lg
      margin-bottom: 22px
    @media media-md
      margin: 0
      flex-shrink: 0

  &__card, &__overlay
    &:before
      content ''
      background: url(./img/equipment-bg.png) no-repeat
      width: 342px
      height: 407px
      position: absolute;
      top: -20px;
      left: -20px;
      z-index: -1
      pointer-events none

  &__card
    position: relative;
    width: 302px
    height: 368px
    padding: 268px 0 0
    @media media-md
      margin: 0 auto

    &:after
      content ''
      background: url(./img/equipment-frame.png) no-repeat
      width: 283px
      height: 348px
      position: absolute;
      top: 9px;
      left: 9px;
      z-index: -1

    &:hover
      & .equipment
        &__overlay
          opacity: 1

        &__arrow:before
          opacity: 1

  &__image
    position: absolute;
    top: 148px
    left: 50%
    transform translate(-50%, -50%)

  &__name
    font-size: 18px

  &__arrow
    position: absolute;
    width: 39px
    height: 39px
    background: #ea7722
    border-radius: 50%
    left: 124px;
    top: 326px;
    z-index: 2

    &:before
      content ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      border-radius: 50%
      background: linear-gradient(to bottom, #ef9646, #e25c16);
      opacity: 0
      anim()

    svg
      width: 8px
      height: 13px
      position: absolute;
      top: 50%
      left: 50%
      transform translate(-50%, -50%)

  &__overlay
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 1
    padding: 105px 60px
    opacity: 0
    anim()

    &:before
      opacity: .9

    p
      line-height: 1.35

  h6
    font-size: 24px
    margin-bottom: 24px

  &__nav
    display: none;
    @media media-md
      margin-top: 38px
      display: flex;
      justify-content center
