.workInfo
  padding: 36px 0 143px
  background: #f9f9f9
  @media media-lg
    padding: 36px 0 24px
    background: #ffffff
  @media media-md
    padding: 21px 0 16px

  &__slider
    margin-bottom: 36px
    @media media-lg
      margin-bottom: 25px
    @media media-md
      overflow: hidden;
      margin-bottom: 38px

  &__items
    display: flex;
    margin: 0 -15px
    justify-content center
    flex-wrap wrap
    @media media-md
      margin: 0
      flex-wrap nowrap
      justify-content flex-start

  &__item
    margin: 15px
    flex-shrink 0
    @media media-md
      margin: 0

  &__card
    display: block;
    border: 7px solid #fff;
    border-radius: 5px
    overflow: hidden;
    margin: 0 auto

  &__bullets
    display: flex;
    position: relative;
    margin-bottom: 45px
    @media media-lg
      width: 710px
      margin: 0 auto 30px
    @media media-md
      width: 100%
      flex-direction: column
      margin-bottom: 23px

    &:before, &:after
      position: absolute;
      content: ''
      display: block;
      background: url(../../images/sprite-workInfo-h.png)
      left: 0
      @media media-lg
        width: 100%
      @media media-md
        display: none;

    &:before
      top: 0

    &:after
      bottom: 0

  &__bullet
    display: flex;
    position: relative;
    flex: 1
    padding: 0 50px 0
    height: 125px
    flex-direction column
    justify-content center
    @media media-lg
      padding: 0 20px
    @media media-md
      text-align: center;
      margin-bottom: 30px

    &:after
      content ''
      position: absolute;
      display: block;
      left: 100%
      top: 50%
      transform translateY(-50%)
      background: url(../../images/sprite-workInfo-v.png)
      @media media-md
        background: url(../../images/sprite-workInfo-h-sm.png)
        left: 50%
        top: 100%
        transform translateX(-50%)
        margin-top: 12px

    &:last-child
      @media media-md
        margin-bottom: 0

      &:after
        display: none;


  &__header
    color: #292929
    font-size: 18px
    @media media-md
      margin-bottom: 6px

    svg
      height: 20px
      width: 26px
      margin-right: 8px
      @media media-md
        display: block;
        margin: 0 auto 20px

  &__value
    svg
      width: 17px
      height: 17px
      fill: #ed8626

  &__content
    font-size: 18px
    line-height: 1.7
    @media media-lg
      padding: 0 28px

  &__nav
    display: none;
    @media media-md
      margin-top: 46px
      display: flex;
      justify-content center
